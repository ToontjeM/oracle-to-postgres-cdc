{
  "name": "postgres-sink",
  "config": {
    "connector.class": "io.debezium.connector.jdbc.JdbcSinkConnector",
    "tasks.max": "1",
    "batch.size": "1",
    "consumer.metadata.max.age.ms": "5000",

    "topics.regex": "oracle\\.DEMO\\..*",

    "transforms": "unwrap,rename,lowercase",

    "transforms.unwrap.type": "io.debezium.transforms.ExtractNewRecordState",
    "transforms.unwrap.drop.tombstones": "false",

    "transforms.rename.type": "org.apache.kafka.connect.transforms.RegexRouter",
    "transforms.rename.regex": ".*\\.(.*)",
    "transforms.rename.replacement": "$1",

    "transforms.lowercase.type": "org.apache.kafka.connect.transforms.RegexRouter",
    "transforms.lowercase.regex": ".*",
    "transforms.lowercase.replacement": "$0",
    "transforms.lowercase.lowercase.output": "true",

    "connection.url": "jdbc:postgresql://postgres:5432/demo",
    "connection.username": "postgres",
    "connection.password": "password",

    "insert.mode": "upsert",
    "schema.evolution": "basic",
    "primary.key.mode": "record_key",
    "delete.enabled": "true"
  }
}
